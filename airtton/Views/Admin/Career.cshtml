@model IEnumerable<airtton.ViewModel.CareerSummaryViewModel>

@{
    ViewBag.Title = "Career";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

@helper Truncate(string input, int length)
{
if (input.Length <= length)
{
        @input
}
else
{
        @input.Substring(0, length)<text>...</text>
}
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="col-md-12">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-comments"></i>人才招聘
                </div>
                <div class="actions">
                    <a href="@Url.Action("CareerCreate","Admin")" type="button" class="btn btn-default btn-sm"><i class="fa fa-pencil"></i>添加招聘信息</a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    编号
                                </th>
                                <th>
                                    职位
                                </th>
                                <th>
                                    人数
                                </th>
                                <th>
                                    工作地点
                                </th>
                                <th>
                                    发布时间
                                </th>
                                <th>
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.JobTitle</td>
                                    <td>@item.VacancyNubmer</td>
                                    <td>@item.Location</td>
                                    <td>@item.CreateDate</td>

                                    <td>
                                        <a href="@Url.Action("CareerEdit", "Admin", new { id=item.ID })" title="编辑"><i class="fa fa-pencil-square-o"></i></a>
                                        <a href="@Url.Action("CareerDeleteConfirm", "Admin", new { id=item.ID})" title="删除"><i class="fa fa-times"></i></a>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</body>
</html>


