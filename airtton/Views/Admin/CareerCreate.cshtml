@model airtton.ViewModel.CareerEditViewModel

@{
    ViewBag.Title = "CareerCreate";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("CareerCreateSubmit", "Admin", FormMethod.Post, new { @id = "careerForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="portlet box green col-md-11">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i> 新增招聘信息
            </div>
            <div class="tools">
            </div>
        </div>
        <div class="portlet-body form">
            <form role="form">
                <div class="form-body">
                    <div class="form-group">
                        <label>职位</label>
                        <input type="text" name="JobTitle" class="form-control input-lg" placeholder="职位" value="" />
                    </div>
                    <div class="form-group">
                        <label>部门</label>
                        <input type="text" name="CategoryName" class="form-control" placeholder="部门" value="">
                    </div>
                    <div class="form-group">
                        <label>工作地点</label>
                        <input type="text" name="Location" class="form-control input-lg" placeholder="工作地点" value="" />
                    </div>
                    <div class="form-group">
                        <label>经验要求</label>
                        <input name="Experience" class="form-control"  placeholder="经验要求" value="" />
                    </div>
                    <div class="form-group">
                        <label>学历要求</label>
                        <input type="text" name="Education" class="form-control input-lg" placeholder="学历要求" value="" />
                    </div>
                    <div class="form-group">
                        <label>工作类型</label>
                        <input type="text" name="WorkType" class="form-control" placeholder="工作类型" value="" />
                    </div>
                    <div class="form-group">
                        <label>职位描述</label>
                        <textarea name="Description" class="form-control input-lg" rows="10" placeholder="职位描述"></textarea>
                    </div>
                    <div class="form-group">
                        <label>任职资格</label>
                        <textarea name="Qualification" class="form-control" rows="10" placeholder="任职资格"></textarea>
                    </div>
                </div>

                <div class="form-actions right">
                    <a href="@Url.Action("Career","Admin")" class="btn default">取消</a>
                    <button type="submit" class="btn green">发布</button>
                </div>
            </form>
        </div>
    </div>
}

