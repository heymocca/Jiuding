@model IEnumerable<airtton.ViewModel.EventsSummaryViewModel>

@{
    ViewBag.Title = "Events";
    Layout = "~/Views/Admin/Shared/_Layout.cshtml";
}

@helper Truncate (string input, int length)
{
if( input.Length <= length)
{ 
    @input
}
else { 
    @input.Substring(0,length)<text>...</text>
}
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>行业动态</title>
</head>
<body>
    <div class="col-md-12">
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-comments"></i>行业动态
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <a href="@Url.Action("EventsCreate","Admin")" type="button" class="btn btn-success right">添加行业动态</a>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                    编号
                                </th>
                                <th>
                                    行业动态标题
                                </th>
                                <th>
                                    创建时间
                                </th>
                                <th>
                                    行业动态内容
                                </th>
                                <th>
                                    图片
                                </th>
                                <th>
                                    操作
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@Truncate(item.Title, 20)</td>
                                    <td>@item.CreateDate</td>
                                    <td>
                                        @if (item.Content != null && item.Content != "")
                                        {
                                            @Truncate(item.Content, 50)
                                        }
                                    </td>
                                    <td>
                                        @if (item.ImagePath != null)
                                        {
                                            <span class="fa fa-check-circle"></span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EventsEdit", "Admin", new { id=item.Id })" class="btn btn-success">编辑</a>
                                        <a href="@Url.Action("EventsDeleteConfirm", "Admin", new { id = item.Id })" class="btn btn-danger">删除</a>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
</body>
</html>

